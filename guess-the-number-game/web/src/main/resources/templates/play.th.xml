<thlogic>
    <attr sel="#headId" th:replace="~{fragments/head::headFragment}"/>
    <attr sel="#mainMessage" th:text="${__${T(academy.learnprogramming.util.AttributeNames).MAIN_MESSAGE}__}"/>
    <attr sel="#resultMessage" th:text="${__${T(academy.learnprogramming.util.AttributeNames).RESULT_MESSAGE}__}"/>
    <attr sel="#gameForm" th:action="@{__${T(academy.learnprogramming.util.GameMappings).PLAY}__}" action="play" method="post"/>
    <attr sel="#footer" th:replace="~{fragments/footer::footerFragment}"/>
    <attr sel="#game-title" th:text="#{game.title}"/>
    <attr sel="#enter-guess" th:text="#{game.enter.guess}"/>
    <attr sel="#submit" th:value="#{game.submit}"/>
</thlogic>